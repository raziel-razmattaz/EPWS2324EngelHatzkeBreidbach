      jump section26
    "To minimize or eliminate challenging behaviors":
      set data.answerQ25 false
      jump section26
    "To promote individual strengths and adaptive skills":
      set data.answerQ25 true
      jump section26
    "To make individuals with ASD appear 'typical'":
      set data.answerQ25 false
      jump section26

section26:
  if (== $data.answerQ23 true):
